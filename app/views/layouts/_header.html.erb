<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", Settings.default.app_url, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("navigation.home"), Settings.default.static_pages.home %></li>
        <li><%= link_to t("navigation.help"), Settings.default.static_pages.help %></li>
        <% if logged_in? %>
          <li><%= link_to t("navigation.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown", id: "account" do %>
              <%= t "navigation.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" id="dropdown-menu">
              <li><%= link_to t("navigation.profile"), current_user %></li>
              <li><%= link_to t("navigation.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("navigation.logout"), logout_path, data: { turbo_method: :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("navigation.login"), Settings.default.login %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
